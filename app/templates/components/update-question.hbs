{{#if updateQuestionForm}}
  <h3>Update {{question.author}}'s question</h3>
    <div>
      <form>
        <div class="form-group">
          <label for="author">Name</label>
          {{input value=author id="author" placeholder=question.author}}
        </div>

        <div class="form-group">
          <label for="city">City</label>
          {{input value=city id="city" placeholder=question.city}}
        </div>

        <div class="form-group">
          <label for="userQuestion">Question</label>
          {{input value=userQuestion id="userQuestion" placeholder=question.userQuestion}}
        </div>

        <button {{action 'update' question}}>Save</button>
      </form>
    </div>
{{else}}
    <button {{action 'updateQuestionForm'}}>Update</button>
{{/if}}
